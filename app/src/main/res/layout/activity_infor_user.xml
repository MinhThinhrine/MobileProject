<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.inforUser">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/titleUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_action_back_black"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Thông tin tài khoản"
        app:titleTextColor="@color/black" />

    <RelativeLayout
        android:id="@+id/relativLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_diachi"
        android:elevation="8dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagUser">

        <TextView
            android:id="@+id/iduser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="90dp"
            android:layout_toRightOf="@id/imagUser"
            android:text="ID:"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emaiuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iduser"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/imagUser"
            android:text="Email:"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emaiuser"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/imagUser"
            android:text="Tên người dùng:"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phoneUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameUser"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/imagUser"
            android:text="Số điện thoại"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneUser"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/imagUser"
            android:text="Địa chỉ:"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/thaydoithongtin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/background_diachi"
        android:gravity="center|left"
        android:paddingLeft="50dp"
        android:text="Thay đổi thông tin"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativLayout" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/thaydoithongtin"
        app:layout_constraintEnd_toEndOf="@+id/thaydoithongtin"
        app:layout_constraintTop_toTopOf="@+id/thaydoithongtin"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/nextbnt" />

    <TextView
        android:id="@+id/doimk"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/background_diachi"
        android:gravity="center|left"
        android:paddingLeft="50dp"
        android:text="Thay đổi mật khẩu"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thaydoithongtin" />

    <ImageView
        android:id="@+id/bntdoimk"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/doimk"
        app:layout_constraintEnd_toEndOf="@+id/doimk"
        app:layout_constraintTop_toTopOf="@+id/doimk"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/nextbnt" />

    <TextView
        android:id="@+id/lichsu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/background_diachi"
        android:gravity="center|left"
        android:paddingLeft="50dp"
        android:text="Lịch sử đơn hàng"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doimk" />

    <ImageView
        android:id="@+id/bntlichsu"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/lichsu"
        app:layout_constraintEnd_toEndOf="@+id/lichsu"
        app:layout_constraintTop_toTopOf="@+id/lichsu"
        app:srcCompat="@drawable/nextbnt" />

    <ImageView
        android:id="@+id/imagUser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/iconinfor"
        app:layout_constraintBottom_toTopOf="@+id/relativLayout"
        app:layout_constraintTop_toBottomOf="@+id/titleUser"
        tools:layout_editor_absoluteX="155dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

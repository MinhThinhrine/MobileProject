<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgr_item_adm"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:id="@+id/layout_user"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imagUser"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/icon_user" />

        <TextView
            android:id="@+id/iduser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="90dp"
            android:layout_toRightOf="@id/imagUser"
            android:text="ID:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emaiuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iduser"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/imagUser"
            android:text="Email:"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <Button
            android:layout_width="112dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_admin"
            android:text="chỉnh sửa"
            android:textSize="10dp" />

        <Button
            android:layout_width="112dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_admin"
            android:text="xóa"
            android:textSize="10dp" />
    </LinearLayout>

</LinearLayout>
